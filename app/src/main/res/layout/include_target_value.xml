<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Layout">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/vGoalTypeTitle"
        style="@style/TextView.CardTitle"
        android:text="@string/target"
        android:textAppearance="@style/ListHeader"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.marcinmoskala.arcseekbar.ArcSeekBar
        android:id="@+id/vTargetValueSelector"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="@id/vGoalTypeTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:progress="130"
        app:progressBackgroundColor="@color/primary_light"
        app:progressBackgroundWidth="20dp"
        app:progressColor="@color/primary"
        app:progressWidth="20dp"
        app:roundEdges="true"
        app:thumb="@drawable/ic_full_circle" />

    <TextView
        android:id="@+id/vRating"
        style="@style/TextView"
        android:layout_gravity="center"
        android:padding="16dp"
        android:text="This seems like a good challenge"
        android:textAppearance="@style/text14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


