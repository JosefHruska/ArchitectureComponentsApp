<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Layout"
    android:layout_marginTop="36dp"
    android:layout_marginBottom="24dp">

    <ImageView
        android:id="@+id/vDistance"
        style="@style/Image.Goal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="@+id/vCalories"
        android:src="@drawable/ic_distance" />

    <ImageView
        android:id="@+id/vCalories"
        style="@style/Image.Goal"
        android:src="@drawable/ic_burn"
        app:layout_constraintLeft_toLeftOf="@id/vDistance"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@+id/vActive"
        />

    <ImageView
        android:id="@+id/vActive"
        style="@style/Image.Goal"
        android:src="@drawable/ic_active_time"
        app:layout_constraintLeft_toLeftOf="@id/vCalories"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@+id/vSteps"/>

    <ImageView
        android:id="@+id/vSteps"
        style="@style/Image.Goal"
        android:src="@drawable/ic_steps"
        android:layout_marginLeft="24dp"

        app:layout_constraintLeft_toLeftOf="@id/vActive"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>